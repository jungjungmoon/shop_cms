<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.order.mapper.OrderMapper">

    <sql id="selectListWhere">

    </sql>

    <select id="selectListCount"
            parameterType="shop.order.model.OrderParam"
            resultType="long">

        select count(*)
        from product_order
        where 1 = 1
        <include refid="selectListWhere"/>

    </select>


    <select id="selectList"
            parameterType="shop.order.model.OrderParam"
            resultType="shop.order.dto.OrderDto">

        select product_order.*
        , p.subject
        , m.user_name
        , m.phone
        from product_order
        join product p on product_order.product_id = p.id
        join member m on product_order.user_id = m.user_id
        where 1 = 1
        <include refid="selectListWhere"/>
        order by reg_dt desc

        limit #{pageStart}, #{pageEnd}
    </select>

</mapper>